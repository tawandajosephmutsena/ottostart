# ============================================
# OttoStart Production Environment Configuration
# For cPanel/Verpex Shared Hosting
# ============================================

# Application Settings
APP_NAME=OttoStart
APP_ENV=production
APP_KEY=base64:qkR9k62+atQrMYmEhgfVZj4HxCX12m59LLi2+ry5f/g=
APP_DEBUG=false
APP_URL=https://otto-mate.space

# Locale Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging (single file for shared hosting)
LOG_CHANNEL=single
LOG_LEVEL=error

# ============================================
# DATABASE CONFIGURATION
# ============================================
# SQLite (Recommended for shared hosting - simpler setup)
DB_CONNECTION=sqlite
# IMPORTANT: Update 'ottomate' to your actual cPanel username
# The database should be in your app directory, not public_html
DB_DATABASE=/home/ottomate/ottomate/database/database.sqlite

# MySQL Alternative (uncomment if using MySQL)
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=ottomate_dbname
# DB_USERNAME=ottomate_dbuser
# DB_PASSWORD=your_secure_password

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ============================================
# CACHE & QUEUE (File-based for shared hosting)
# ============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=file
CACHE_PREFIX=ottostart-cache

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_MAILER=log

# SMTP Configuration (uncomment and configure for email)
# MAIL_MAILER=smtp
# MAIL_HOST=mail.otto-mate.space
# MAIL_PORT=465
# MAIL_USERNAME=noreply@otto-mate.space
# MAIL_PASSWORD=your_email_password
# MAIL_ENCRYPTION=ssl
# MAIL_FROM_ADDRESS=noreply@otto-mate.space
# MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# VITE (Frontend Build)
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# OPTIONAL: ERROR TRACKING (Sentry)
# ============================================
# SENTRY_LARAVEL_DSN=https://your-sentry-dsn
